<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PublicationUtilisateur</servlet-name>
        <servlet-class>servlets.PublicationUtilisateur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchResult</servlet-name>
        <servlet-class>servlets.SearchResult</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Activities</servlet-name>
        <servlet-class>servlets.Activities</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePublication</servlet-name>
        <servlet-class>servlets.DeletePublication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CodeCo</servlet-name>
        <servlet-class>servlets.CodeCo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicationsForTimelineNotif</servlet-name>
        <servlet-class>servlets.PublicationsForTimelineNotif</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Activites</servlet-name>
        <servlet-class>servlets.Activites</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublicationUtilisateur</servlet-name>
        <url-pattern>/publicationUtilisateur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchResult</servlet-name>
        <url-pattern>/searchresult</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Activities</servlet-name>
        <url-pattern>/activities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePublication</servlet-name>
        <url-pattern>/deletePublication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CodeCo</servlet-name>
        <url-pattern>/CodeCo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicationsForTimelineNotif</servlet-name>
        <url-pattern>/publicationsForTimelineNotif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Activites</servlet-name>
        <url-pattern>/Activites</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
